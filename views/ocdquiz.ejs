        <script>
            // hiding next and submit button at the start of quiz
            function display() {
                var y = document.getElementById("next");
                y.style.display = "none";
                var z = document.getElementById("submit");
                z.style.display = "none";
                var op = document.getElementById("options");
                op.style.display = "none";
//                var qu = document.getElementById("ques-block");
//                qu.style.display = "none";
            }
            
            //quiz function
            var count = 0;  //to count ques no.
            var score = 0;  //to count score i.e. "yes"
            function myFunc() {
                count++;
                
                // clac score 
                var ele = document.getElementsByTagName('input');
                for(i=0; i<ele.length; i++) {
                    if(ele[i].type = "radio") {
                        if(ele[i].checked) {
                            if(ele[i].value == 'yes') {
                                score++;
                            }
                            console.log(score);
                        }   
                        ele[i].checked = false;
                    }
                }
                
                //result
                var res = " ";
                if(score <= 4) {
                    res = "You are completely fine!";
                } else {
                    res = "Strong probability of having an OCD, we recommend you to seek some medical help as soon as possible!"
                }
                
                //hide start button
                var x = document.getElementById("start");
                if (count === 0) {
                    x.style.display = "block";
                } else {
                    x.style.display = "none";
                }
                
                //Next button and radio-button options
                var y = document.getElementById("next");
                var op = document.getElementById("options");
                if (count >= 1 && count <= 8) {
                    y.style.display = "block";
                    op.style.display = "block";
                } else {
                    y.style.display = "none";
                    op.style.display = "none";
                }
                
                //Submit button
                var z = document.getElementById("submit");
                if (count == 9) {
                    z.style.display = "block";
                } else {
                    z.style.display = "none";
                }
                
                //Display question ans results of quiz
                //console.log(count);
                if(count == 1) {
                    document.getElementById("ques").innerHTML = "1. Do you feel sad, irritated, helpless most of the time during the day? ";
                }else if(count == 2) {
                    document.getElementById("ques").innerHTML = "2. Do you feel like you are not interestedij doing normal routine things like bathing, brushing etc or things you normally bloved doing in past few weeks?  ";
                } else if(count == 3) {
                    document.getElementById("ques").innerHTML = "3. Have you been bothered by trouble falling asleep staying asleep or sleeping too much over last few weeks? ";
                } else if(count == 4) {
                    document.getElementById("ques").innerHTML = "4. Do you feel bothered by poor appetile? Of weight loss? or overeating sincefew days? ";
                } else if(count == 5) {
                    document.getElementById("ques").innerHTML = "5. Do you frequently complain of being very tired or having very little energy? ";
                } else if(count == 6) {
                    document.getElementById("ques").innerHTML = " 6. Do you keep feeling bad about yourself or feeling that  you are a failure, or that you have let yourself or your family down most of the time? ";
                } else if(count == 7) {
                    document.getElementById("ques").innerHTML = "7. Do you have trouble concentrating on things like school work, reading or watching tv since few days? ";
                } else if(count == 8) {
                    document.getElementById("ques").innerHTML = "8. Have you had any harmful thoughts about harming/hurting yourself or others recently?  ";
                } else if(count == 9) {
                    document.getElementById("ques").innerHTML = " ";
                } else {
                    document.getElementById("ques").innerHTML = "RESULTS<br>" + res;
                }
            }
        </script>
    </head>
    
    <body onload="display()">
